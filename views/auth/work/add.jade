extends ../../layout

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/add.css')

block content_scripts
	script(type='text/javascript', src='/scripts/add.js')
	script(type='text/javascript', src='/scripts/mfupload.js')
	script(type='text/javascript', src='/scripts/jquery-ui-1.10.3.custom.min.js')

block content
