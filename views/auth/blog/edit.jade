extends ../../layout

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/add.css')

block content_scripts
	script(type='text/javascript', src='/scripts/add.js')

block content
	.form_block
		a.back_link(href='/auth') < Назад
		.title РЕАДАКТИРОВАТЬ ПОСТ
		form(action="", method="post", enctype="multipart/form-data")
			.form_title Заголовок (мета):
			input(type="text", name="meta[title]", value=post.meta.title)
			.form_title Заголовок:
			input.ru(type="text", name="ru[title]", value=post.ru.title)
			input.en(type="text", name="en[title]", disabled)
			.form_title Описание (мета):
			textarea(name="meta[description]", rows="8",)= post.meta.description
			.form_title Описание:
			textarea.ru(name="ru[body]", rows="8",)= post.ru.body
			textarea.en(name="en[body]", rows="8", disabled)
			.form_title Картинка:
			input(type="file", name="image")
			.form_title Категория:
			select(name='tag')
				option(value='design') дизайн
				option(value='art') исскуство и фотография
				option(value='architecture') архитектура
			br
			input(type='button', class='toggle_eng', value='Перевод')
			input.form_submit(type="button", value="Редактировать")