extends ../layout

block title
	title РАБОТЫ

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/works.css' + version)

block content_scripts
	script(type='text/javascript', src='/scripts/works.js' + version)

block content
	.works_block
		each work in works
			.work_item
				.work_inner(style='background-image: url(/images/design/logo4.png)')
					.work_title= work.ru.title
					.work_tag= work.tag