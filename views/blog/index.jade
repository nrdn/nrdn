extends ../layout

block title
	title БЛОГ

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/blog.css' + version)

block content_scripts
	script(type='text/javascript', src='/scripts/blog.js' + version)

block content
	each post in posts
		.post_item_block
			img.post_img(src=post.image)
			a.post_title(href='/blog/' + post.b_id)= post.ru.title
			.post_body= post.ru.body
