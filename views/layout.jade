doctype html
html
	head
		include header
	body
		if (works)
			.background_works
				each work in works
					.background_item(style='background-image: url(' + work.images[0].path + ')')
		.maket
			.main_block
				.menu_block
					.left_menu
						a(href='/works') Работы
						a(href='/publish') Публикации
					a(href='/')
						img(src='images/design/logo.png')
					.right_menu
						a(href='/blog') Блог
						a(href='/contacts') Контакты
				.content_block
					block content
				.footer_block
